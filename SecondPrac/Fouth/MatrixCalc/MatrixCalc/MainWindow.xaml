        <Grid x:Name="grid1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,21,0,0" MinWidth="30" MinHeight="30"/>
        <Grid x:Name="grid2" Margin="534,21,0,0" ShowGridLines="True" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="30" MinHeight="30"/>
        <Grid x:Name="grid3" Margin="366,282,0,0" VerticalAlignment="Top" MinWidth="30" MinHeight="35" HorizontalAlignment="Left"/>
        <Button Content="Вычислить" HorizontalAlignment="Left" Margin="366,238,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click"/>
        <Button x:Name="button2" Content="Заполнить случайными числами" HorizontalAlignment="Left" Margin="50,282,0,0" VerticalAlignment="Top" Click="button2_Click" Height="32" Width="213"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="593"><Run Language="ru-ru" Text="Столбцы"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="213,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="593"><Run Language="ru-ru" Text="Строки"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="534,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="593"><Run Language="ru-ru" Text="Столбцы"/><LineBreak/><Run Language="ru-ru"/></TextBlock>

    </Grid>
</Window>
